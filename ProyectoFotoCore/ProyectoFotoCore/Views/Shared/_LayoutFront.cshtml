<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <environment include="Development">
        <link href="~/css/materialize.min.css" rel="stylesheet" />
        <link href="~/css/custom.css" rel="stylesheet" />
    </environment>

    <environment include="Production">
        <link href="~/css/materialize.min.css" rel="stylesheet" />
        <link href="~/css/custom.css" rel="stylesheet" />
    </environment>

    @RenderSection("styles", false)
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>
<body>
    <main class="grey lighten-4">
        <nav class="white" style="color:black;">
            <div class="nav-wrapper">
                <a asp-controller="Front" asp-action="Index" class="brand-logo" style="color:black">Proyecto Foto</a>
                
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a asp-controller="Front" asp-action="Sessions" style="color: black">Sesiones</a></li>
                    <li><a asp-controller="Front" asp-action="Comision" class="dropdown-trigger"  style="color: black">Comisiones</a></li>
                </ul>
            </div>
        </nav>
        <div class="row"></div>
        @RenderBody()
    </main>

    <footer class="page-footer grey darken-2">
        <div class="container">
        </div>
        <div class="footer-copyright">
            <div class="container">
                Proyecto MCSD 2018 - 2019
            </div>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/js/jquery-3.3.1.min.js"></script>
        <script src="~/js/materialize.min.js"></script>
    </environment>
    <environment include="Production">
        <script src="~/js/jquery-3.3.1.min.js"></script>
        <script src="~/js/materialize.min.js"></script>
    </environment>

    @if (IsSectionDefined("events"))
    {
        @RenderSection("events")
    }



</body>
</html>
