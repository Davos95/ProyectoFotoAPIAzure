@using ProyectoFotoCore.Models;
@model List<SESSION_COMPLEX>

@{
    ViewData["Title"] = "Sessions";
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}
@section styles {
    <style>

        .noPadding {
            padding: 0px !important;
        }

        .img {
            height: 240px;
            object-fit:cover;
        }
    </style>
}
<div class="row">

    @if (Model.Count() > 0)
    {
        foreach (SESSION_COMPLEX s in Model)
        {
            <div class="col s12 m8 l6 xl4 ">
                <div class="card">
                    <div class="card-image">
                        <a asp-controller="Front" asp-action="Photos" asp-route-id="@s.Id">
                            <img src="@s.UriAzure" class="img" />
                        </a>
                        
                        <div class="card-title">@s.Name</div>
                    </div>
                </div>
            </div>
        }
    }

</div>